[
  {
    // Universal configuration - works on any monitor (eDP-1, DP-1, DP-2, HDMI-1, etc.)
    // Removed "output" field so this appears on ALL connected monitors
    "reload_style_on_change": true,
    "layer": "top",
    "position": "top",
    "spacing": 0,
    "height": 26,
    "modules-left": [
      "custom/omarchy",
      "custom/ws1",
      "custom/ws2",
      "custom/ws3",
      "custom/ws4",
      "custom/ws5",
      "custom/ws6"
    ],
    "modules-center": [
      "custom/pomodoro-icon",
      "custom/pomodoro",
      "custom/pomodoro-play",
      "custom/pomodoro-skip",
      "custom/spotify-icon",
      "custom/spotify",
      "custom/spotify-prev",
      "custom/spotify-play",
      "custom/spotify-next",
      "custom/gpu-icon",
      "custom/cpu",
      "custom/gpu",
      "custom/ram",
      "custom/update"
    ],
    "modules-right": [
      "group/tray-expander",
      "bluetooth",
      "network",
      "pulseaudio",
      "battery",
      "clock"
    ],
    "custom/omarchy": {
      "format": "<span font='omarchy'>\ue900</span>",
      "on-click": "omarchy-menu",
      "on-click-right": "omarchy-launch-terminal",
      "tooltip-format": "Omarchy Menu\n\nSuper + Alt + Space"
    },
    "custom/update": {
      "format": "",
      "exec": "omarchy-update-available",
      "on-click": "omarchy-launch-floating-terminal-with-presentation omarchy-update",
      "tooltip-format": "Omarchy update available",
      "signal": 7,
      "interval": 21600
    },
    "clock": {
      "format": "{:L%A %H:%M}",
      "format-alt": "{:L%d %B W%V %Y}",
      "tooltip": false,
      "on-click-right": "omarchy-launch-floating-terminal-with-presentation omarchy-tz-select"
    },
    "network": {
      "format-icons": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"],
      "format": "{icon}",
      "format-wifi": "{icon}",
      "format-ethernet": "󰀂",
      "format-disconnected": "󰤮",
      "tooltip-format-wifi": "{essid} ({frequency} GHz)\n⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
      "tooltip-format-ethernet": "⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
      "tooltip-format-disconnected": "Disconnected",
      "interval": 4,
      "spacing": 7,
      "on-click": "omarchy-launch-wifi"
    },
    "battery": {
      "format": "{capacity}% {icon}",
      "format-discharging": "{icon}",
      "format-charging": "{icon}",
      "format-plugged": "",
      "format-icons": {
        "charging": ["󰢜", "󰂆", "󰂇", "󰂈", "󰢝", "󰂉", "󰢞", "󰂊", "󰂋", "󰂅"],
        "default": ["󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"]
      },
      "format-full": "󰂅",
      "tooltip-format-discharging": "{power:>5.0f}W↓ {capacity}%",
      "tooltip-format-charging": "{power:>5.0f}W↑ {capacity}%",
      "interval": 9,
      "on-click": "omarchy-menu power",
      "states": {
        "warning": 25,
        "critical": 15
      }
    },
    "bluetooth": {
      "format": "",
      "format-disabled": "󰂲",
      "format-connected": "",
      "tooltip-format": "Devices connected: {num_connections}",
      "on-click": "blueberry"
    },
    "pulseaudio": {
      "format": "{icon}",
      "on-click": "$TERMINAL --class=Wiremix -e wiremix",
      "on-click-right": "pamixer -t",
      "tooltip-format": "Playing at {volume}%",
      "scroll-step": 11,
      "format-muted": "",
      "format-icons": {
        "default": ["", "", ""]
      }
    },
    "group/tray-expander": {
      "orientation": "inherit",
      "drawer": {
        "transition-duration": 606,
        "children-class": "tray-group-item"
      },
      "modules": ["custom/expand-icon", "tray"]
    },
    "custom/expand-icon": {
      "format": "",
      "tooltip": false
    },
    "custom/cpu-icon": {
      "exec": "/home/bjorn/.config/waybar/scripts/cpu-icon.sh",
      "format": "{}",
      "interval": 1,
      "return-type": "json",
      "on-click": "/home/bjorn/.config/waybar/scripts/cpu-icon.sh toggle",
      "tooltip": true,
      "signal": 1
    },
    "custom/cpu": {
      "exec": "/home/bjorn/.config/waybar/scripts/cpu.sh",
      "format": "CPU {}%",
      "interval": 5,
      "return-type": "json",
      "tooltip": true,
      "signal": 2
    },
    "custom/gpu-icon": {
      "exec": "/home/bjorn/.config/waybar/scripts/gpu-icon.sh",
      "format": "{}",
      "interval": 1,
      "return-type": "json",
      "on-click": "/home/bjorn/.config/waybar/scripts/gpu-icon.sh toggle",
      "tooltip": "System Metrics\nClick to collapse/expand",
      "signal": 3
    },
    "custom/gpu": {
